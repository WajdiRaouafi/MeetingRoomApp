<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Reservations</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>
<body>
    <div class="container">
        <div class="row">
            <h1>Reservations</h1>
            <a href="/reservations/new" class="btn btn-primary">New Reservation</a>
        </div>
        
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Start Date</th>
                    <th>End Date</th>
                    <th>User</th>
                    <th>Meeting Room</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% reservations.forEach(function(reservation) { %>
                    <tr>
                        <td><%= reservation.title %></td>
                        <td><%= reservation.startDate ? reservation.startDate.toLocaleString() : 'N/A' %></td>
                        <td><%= reservation.endDate ? reservation.endDate.toLocaleString() : 'N/A' %></td>
                        <td><%= reservation.user ? reservation.user.username : 'N/A' %></td>
                        <td><%= reservation.meetingRoom ? reservation.meetingRoom.name : 'N/A' %></td>
                        <td>
                            <a href="/reservations/edit/<%= reservation._id %>" class="btn btn-primary">Edit</a>
                            <form action="/reservations/<%= reservation._id %>?_method=DELETE" method="POST" style="display:inline;">
                                <button type="submit" class="btn btn-danger">Delete</button>
                            </form>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>
